<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eff1">


    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/navbot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/open_sans"
        app:itemHorizontalTranslationEnabled="true"
        app:itemIconTint="@drawable/icon_selected"
        app:itemTextColor="@drawable/icon_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bot_nav" />

    <Button
        android:id="@+id/use_my_loc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@drawable/send_location_button"
        android:drawableLeft="@drawable/ic_near_me_black_24dp"
        android:drawablePadding="8dp"
        android:includeFontPadding="true"
        android:paddingHorizontal="8dp"
        android:text="Use my current location"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_your_loc"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/use_my_loc_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


