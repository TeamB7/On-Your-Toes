        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hi Susan"
            android:layout_marginTop="60dp"
            android:textColor="@color/Font"
            android:textSize="30sp"
            app:fontFamily="@font/open_sans" />


    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/mainscreengradient"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/card_img2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="#ffffff"
                    android:src="@drawable/cardview1"
                    app:srcCompat="@drawable/plan_travel_logo"/>
                <!--- <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/mainscreengradient" />   -->

                <TextView
                    android:id="@+id/tv_TravelPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/card_img2"
                    android:fontFamily="sans-serif-black"
                    android:text="Travel Fitness Plan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/Font"
                    android:textSize="22sp"
                    android:typeface="sans"
                    app:fontFamily="@font/open_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_TravelPlan"
                    android:layout_toRightOf="@+id/card_img2"
                    android:fontFamily="sans-serif-black"
                    android:text="Create fitness plan for your travel"
                    android:textColor="#8E8B91"
                    android:textSize="16sp"
                    app:fontFamily="@font/open_sans" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/amenities_card"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0">


                <ImageView
                    android:id="@+id/card_img1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity=""
                    android:layout_marginTop="12dp"
                    android:src="@drawable/cardview1"
                    app:srcCompat="@drawable/location_icon" />
                <!--- <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/mainscreengradient" />   -->

                <TextView
                    android:id="@+id/tv_Amenities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/card_img1"
                    android:autoText="false"
                    android:fontFamily="sans-serif-black"
                    android:text="Amenities"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/Font"
                    android:textSize="22sp"
                    android:typeface="sans"
                    app:fontFamily="@font/open_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_Amenities"
                    android:layout_toRightOf="@+id/card_img1"
                    android:fontFamily="sans-serif-black"
                    android:text="Search for nearby Recreational facilites"
                    android:textColor="#8E8B91"
                    android:textSize="16sp"
                    app:fontFamily="@font/open_sans" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/card_img3"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cardview1"
                    app:srcCompat="@drawable/safety_logo"></ImageView>
                <!--- <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/mainscreengradient" />   -->

                <TextView
                    android:id="@+id/tv_SafetyInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/card_img3"
                    android:fontFamily="sans-serif-black"
                    android:includeFontPadding="true"
                    android:text="Safety Information"
                    android:textColor="@color/Font"
                    android:textSize="22sp"
                    android:typeface="sans"
                    app:fontFamily="@font/open_sans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_SafetyInformation"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/card_img3"
                    android:fontFamily="sans-serif-black"
                    android:includeFontPadding="false"
                    android:text="Find suburb safety information"
                    android:textColor="#8E8B91"
                    android:textSize="16sp"
                    app:fontFamily="@font/open_sans" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>